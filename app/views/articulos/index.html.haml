%ul.nav.nav-tabs
	%li.active
		= link_to "Articulos", articulos_path
	%li
		= link_to "Pedidos", pedidos_path
	%li
		= link_to "Devoluciones", devolucions_path
	
%table.table.table-striped.articulos
	%thead
		%tr
			%th imagen
			%th Codigo
			%th Nombre
			%th Cantidad
			%th Ubicación
			%th Acciones
	%tbody
		- @articulos.each do |articulo|
			%tr
				%td 
					=image_tag "/#{articulo.foto.store_dir}/thumb_#{articulo.foto_identifier}"
				%td 
					=articulo.codigo
				%td 
					=articulo.nombre
				- if articulo.advertencia_stock == 1
					%th{:style=>"background: #82FA58;"}
						=articulo.cantidad
						=articulo.unidad_de_medida
				- elsif articulo.advertencia_stock == 2
					%th{:style=>"background: #FA5858;"}
						=articulo.cantidad
						=articulo.unidad_de_medida
				- else
					%th{:style=>"background: #F4FA58;"}
						=articulo.cantidad
						=articulo.unidad_de_medida
				%td 
					=articulo.ubicacion.nombre
				%td
					=link_to "Ver", articulo, class: "btn btn-info", title: "Ver Detalles"

