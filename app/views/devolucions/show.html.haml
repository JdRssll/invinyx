- content_for :title, "Lista de Devoluciones"
.hero-unit	
	%h2
		%center
			%i.icon-random
			= "Devolución #{@devolucion.id}"
%br

%table.table.table-bordered.devoluciones
	%thead
		%tr
			%th Imagen
			%th Código
			%th Nombre
			%th Cantidad devuelta
			%th Consumible
	%tbody
		-	@devolucion.lista_de_articulos_pedidos.each do |devolucion|
			%tr
				%td
					=image_tag "/#{devolucion.obtener_articulo.foto.store_dir}/thumb_#{devolucion.obtener_articulo.foto_identifier}"
				%td
					= devolucion.obtener_articulo.codigo
				%td 
					= devolucion.obtener_articulo.nombre
				%td 
					= devolucion.cantidad
				%td
					-if devolucion.obtener_articulo.consumible
						.span.badge.badge-success
							%i.icon-ok
					-else
						.span.badge.badge-important
							✘


