= form_for(@pedido) do |f|
	.row.row-invinyx
		.span12
			.span2
				= f.text_field :empleado_id, class: "formPedido", id: "cedulaEmpleado", readonly: "readonly", type:"", tittle: "CÃ©dula"
			.span2
				= text_field_tag "Nombre","", class: "formPedido", id: "nombreEmpleado", readonly: "readonly", type:""
			.span2
				= text_field_tag "Apellido","", class: "formPedido", id: "apellidoEmpleado", readonly: "readonly", type:""	
			.span2
				= text_field_tag "Telefono","", class: "formPedido", id: "telefonoEmpleado", readonly: "readonly", type:""
			.span2
				= text_field_tag "Obra","", class: "formPedido", id: "obraEmpleado", readonly: "readonly", type:""
			.span1 
				=link_to "Buscar", "#", class: "btn", id: "buscarEmpleado", "data-toggle" => "modal", href: "#EmpleadosModal", role: "button" 			
	%hr
	%center
		%h4
			Lista de Articulos
	%hr
	.row.row-invinyx
		.span6
			%table.table.table-bordered.tablaEstandar
				%thead
					%tr
						%th Codigo
						%th Nombre
						%th Cantidad
						%th Acciones
				%tbody
					- @articulos.each do |articulo|
						%tr
							%td
								=articulo.codigo
							%td 
								=articulo.nombre
							- if articulo.advertencia_stock == 1
								%th{:style=>"background: #82FA58;"}
									=articulo.cantidad
									=articulo.unidad_de_medida
							- elsif articulo.advertencia_stock == 2
								%th{:style=>"background: #FA5858;"}
									=articulo.cantidad
									=articulo.unidad_de_medida
							- else
								%th{:style=>"background: #F4FA58;"}
									=articulo.cantidad
									=articulo.unidad_de_medida
							%td
								=link_to_function '<i class="icon-plus"></i>'.html_safe, "agregar('#{articulo.id}', '/agregar/articulo/')", class: "btn", remote: true
		.span6
			%table.table.table-bordered#articulosAgregado
				%thead
					%tr
						%th Codigo
						%th Nombre
						%th Cantidad
						%th Acciones
				%tbody.agregar
					%tr#anuncio
						%th{ :colspan=>"4" }
							%center
								No hay articulos en la lista
	%br
	%br
	.modal-footer	
		= f.submit class: "btn btn-primary"
		=link_to"Volver", pedidos_path, class: "btn"
		