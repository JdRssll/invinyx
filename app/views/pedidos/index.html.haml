%ul.nav.nav-tabs
	%li
		%a{:href => "/articulos"}
			/%i.icon-th-large
			Articulos
	%li.active
		%a{:href => "#"} Pedidos
	%li
		%a{:href => "/devoluciones"} Devoluciones
%p
	%a.btn.btn-primary{:href => "/pedidos/new"}
		Realizar Pedido
%br 
%table.table.table-striped#articulos
	%thead
		%tr
			%th #
			%th C.I
			%th Empleado
			%th Obra
			%th Estado
			%th Fecha
			%th Acciones
	%tbody
		- @pedidos.each do |pedido|
			%tr
				%td 
					=pedido.id
				%td 
					=pedido.empleado.cedula
				%th
					=pedido.empleado.nombre
					=pedido.empleado.apellido
				%th
					=pedido.empleado.obra.nombre
				- if pedido.estado == 0
					%th{:style=>"background: #82FA58;"}
						=pedido.estado
				- else
					%th{:style=>"background: #FA5858;"}
						=pedido.estado
				%th
					=pedido.created_at.strftime("%d %b. %Y %H:%M")
				%td
					=link_to("V", "/pedidos/show/#{pedido.id}", html_options = {:class=>"btn", :title=>"Ver Detalles"})
					=link_to("D", "#", html_options = {:class=>"btn", :title=>"Realizar Devolución"})
					


