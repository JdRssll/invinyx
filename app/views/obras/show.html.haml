- content_for :title, "#{@obra.nombre}"
.hero-unit	
	%h2
		%center
			%i.icon-briefcase
			=@obra.nombre 
%br
%table.table.table-bordered.articulos
	%thead
		%tr
			%th imagen
			%th Codigo
			%th Nombre
			%th Cantidad
			%th Consumible
	%tbody
		- @listado.each do |articulo|
			%tr
				%td 
					=image_tag "/#{articulo[0].foto.store_dir}/thumb_#{articulo[0].foto_identifier}"
				%td
					=articulo[0].codigo
				%td
					=articulo[0].nombre
				%td
					=articulo[1]
				%td
					-if articulo[0].consumible
						.span.badge.badge-success
							%i.icon-ok
					-else
						.span.badge.badge-important
							✘
