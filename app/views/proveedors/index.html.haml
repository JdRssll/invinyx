%ul.nav.nav-tabs
	%li
		= link_to '<i class="icon-th-list"> Articulos</i>'.html_safe, articulos_path
	%li
		= link_to '<i class="icon-shopping-cart"> Pedidos</i>'.html_safe, pedidos_path
	%li
		= link_to '<i class="icon-random"> Devoluciones</i>'.html_safe, devolucions_path
	%li
		= link_to '<i class="icon-list-alt"> Facturas</i>'.html_safe, facturas_path
	%li.active
		= link_to '<i class="icon-book"> Proveedores</i>'.html_safe, proveedors_path

.modal-footer	
	%h2
		%center
			%i.icon-book
			Directorio de Proveedores
%br

%table.table.table-bordered#proveedores
	%thead
		%tr
			%th Rif
			%th Nombre
			%th Direccion
			%th Telefono
			%th Email
	%tbody
		- @proveedores.each do |proveedor|
			%tr
				%td 
					=proveedor.rif
				%td 
					%i.icon-th-large
					=proveedor.nombre
				%td
					%i.icon-map-marker
					=proveedor.direccion
				%td 				
					%i.icon-home
					=proveedor.telefono
				%td 
					%i.icon-globe
					=proveedor.email


